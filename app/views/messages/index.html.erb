<div>
  <div>
    <h1>
      List of all messages
    </h1>
  </div>
</div>

<hr>
<div>
  <div class="container-fluid">
    <table border="1" class="container-fluid">
      <tr>
        <th>
          ID
        </th>

        <th>
          Message
        </th>

        <th>
          Phone number
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        Message Details
        </th>
      </tr>

      <% @list_of_messages.each do |a_message| %>
      <tr>
        <td>
          <%= a_message.id %>
        </td>



        <td>
          <%= a_message.message %>
        </td>




        <td>
          <%= a_message.phone_number %>
        </td>

        <td>
          <%= time_ago_in_words(a_message.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_message.updated_at) %> ago
        </td>

        <td>
          <a href="/messages/<%= a_message.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<a href="/export_photos.csv">Export as CSV</a>
