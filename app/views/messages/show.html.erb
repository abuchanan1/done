<div>
  <div>
    <h1>
      Message #<%= @the_message.id %> details
    </h1>

    <div>
      <div>
        <a href="/messages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_message/<%= @the_message.id %>">
          Delete message
        </a>
      </div>
    </div>

    <dl>

      <dt>
        Message
      </dt>
      <dd>
        <%= @the_message.message %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @the_message.phone_number %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_message.created_at) %> ago
      </dd>
    </dl>
  </div>
</div>
